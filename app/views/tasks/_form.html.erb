<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Content" %>
  <%= f.button :submit, class: "btn btn-lg btn-primary btn-block" %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
